<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="./styles/main.css">
    <title>Visualizza</title>
</head>
<body>
    <form action="/visualizza" method="post">

       <h2 class="titolo-visualizza">Dati nella tabella Transazione</h2>
    </form>
    <div class="container-visualizza">
    <%  if (locals.data) {%>
        
        <table id="table">
            <tr>
                <td>ID</td>
                <td>Importo</td>
                <td id="data_transazione">Data Transazione</td>
                <td>ID Mese</td>
            </tr>
        <%  data.forEach(res => {%>
                <tr>
                    <td><%=  res.id %></td>
                    <td><%=  res.importo %></td>
                    <td><%=  res.data_transazione.toISOString() %></td>
                    <td><%=  res.id_mese %></td>
                </tr>
        <%  });%>
    </table>
    <%  } else {%>
        <p>Nessun risultato trovato.</p>
    <%  } %>
    </div>
    
</body>
<%- include("partial/footer.ejs") %>
</html>